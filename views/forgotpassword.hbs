<hr>
<div class="container">
    <div class="row">
        <div class="row mx-auto">
            <div class="col-md-12 forgotpass">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="text-center">
                            <h3><i class="fa fa-lock fa-4x"></i></h3>
                            <h2 class="text-center">Forgot Password?</h2>
                            <p>You can reset your password here.</p>
                            <div class="panel-body">

                                <form class="form" id="forgotpass-form">
                                    <fieldset>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i
                                                        class="glyphicon glyphicon-envelope color-blue"></i></span>

                                                <input placeholder="Email address" class="form-control"
                                                    type="email" id="forgotpass-email"
                                                    oninvalid="setCustomValidity('Please enter a valid email address!')"
                                                    onchange="try{setCustomValidity('')}catch(e){}" required="">
                                            </div>
                                        </div>
                                    </fieldset>
                                </form>
                                <div class="form-group">
                                    <button class="btn btn-lg btn-success btn-block" id="forgotpassbtn">Send Password</button>
                                </div>
                                <div>
                                    <button class="btn btn-sm btn-primary" id="forgotpassbackbtn">Back to Home Page</button>
                                </div>
                                <div class="alert alert-dismissible fade show" id="forgotpass-alert" role="alert">
                                    <span id="forgotpass-msg"></span>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>